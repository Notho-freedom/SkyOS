{
  "name": "desktop",
  "version": "0.1.0",
  "private": true,
  "main": "public/Electron/electron.js",
  "homepage": "./",
  "author": "Genesis Company",
  "description": "SkyOS is a powerful and versatile operating system designed to provide users with a seamless and efficient computing experience. With its user-friendly interface, robust performance, and extensive features, SkyOS empowers users to accomplish their tasks with ease and productivity.",
  "build": {
    "appId": "com.skyos.desktop",
    "copyright": "Copyright Â© 2025 Genesis Company.",
    "productName": "SkyOS",
    "asar": true,
    "compression": "maximum",
    "publish": [
      {
        "provider": "github",
        "owner": "Notho-freedom",
        "repo": "SkyOS",           
        "releaseType": "release",
        "private": false
      }
    ],
    "files": [
      "dist/",            
      "public/Electron/"
    ],
    "directories": {
      "buildResources": "assets" 
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SkyOS"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "deb",
      "category": "Utility",
      "icon": "assets/icon.ico"
    }

    
  },
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "electron": "electron .",
    "electron-pack": "vite build && electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@headlessui/react": "^2.2.0",
    "@module-federation/enhanced": "^0.11.1",
    "@module-federation/runtime": "^0.11.1",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@shadcn/ui": "^0.0.4",
    "@tailwindcss/forms": "^0.5.10",
    "@vitejs/plugin-react": "^4.3.4",
    "axios": "^1.8.4",
    "cors": "^2.8.5",
    "dexie": "^4.0.11",
    "dexie-react-hooks": "^1.1.7",
    "framer-motion": "^12.6.3",
    "groq-sdk": "^0.19.0",
    "i18next": "^24.2.3",
    "i18next-browser-languagedetector": "^8.0.4",
    "i18next-http-backend": "^3.0.2",
    "lucide-react": "^0.483.0",
    "react": "^19.1.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^19.1.0",
    "react-grid-gallery": "^1.0.1",
    "react-grid-layout": "^1.5.1",
    "react-i18next": "^15.4.1",
    "react-icons": "^5.5.0",
    "react-player": "^2.16.0",
    "react-rnd": "^10.5.2",
    "react-speech-kit": "^3.0.1",
    "react-speech-recognition": "^4.0.0",
    "react-tooltip": "^5.28.0",
    "sonner": "^2.0.3",
    "uuid": "^11.1.0",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "electron": "^35.0.3",
    "autoprefixer": "10.4.13",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.3",
    "postcss-cli": "^10.0.0",
    "tailwindcss": "3.0.24",
    "vite": "^6.2.5"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
